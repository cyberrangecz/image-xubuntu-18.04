{
    "_comment": "qemu at MacOS doesn't support kvm accelerator, it will use the default accelerator, if no accelerator is defined",
    "_comment": "qemu at MacOS doesn't come with SDL support, use_default_display must be set to true",
    "builders": [
        {
            "accelerator": "kvm",
	    "use_default_display": "true",
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz",
                " initrd=/install/initrd.gz",
                " auto=true",
                " priority=critical",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                " --<enter>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
	    "boot_key_interval": "10ms",
            "disk_interface": "virtio-scsi",
            "disk_size": "{{ user `disk_size` }}",
            "format": "raw",
            "headless": "{{user `headless`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_url": "{{user `iso_url`}}",
            "name": "xubuntu-qemu",
            "net_device": "virtio-net",
            "output_directory": "target-qemu",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory_size` }}m"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }},maxcpus=16,cores=4"
                ]
            ],
            "shutdown_command": "{{user `shutdown_command`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_port": "{{user `ssh_port`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "type": "qemu",
            "vm_name": "{{user `vm_name`}}",
            "vnc_bind_address": "{{user `vnc_bind_address`}}"
        },
        {
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz",
                " initrd=/install/initrd.gz",
                " auto=true",
                " priority=critical",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                " --<enter>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{ user `disk_size` }}",
            "guest_os_type": "Ubuntu_64",
            "headless": "{{user `headless`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_url": "{{user `iso_url`}}",
            "name": "xubuntu-vbox",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{ user `memory_size` }}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{ user `cpus` }}"
                ]
            ],
            "shutdown_command": "echo 'vagrant' | {{user `shutdown_command`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_port": "{{user `ssh_port`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "type": "virtualbox-iso",
            "vm_name": "{{user `vm_name`}}"
    	}
    ],
    "provisioners": [
        {
  	    "type": "file",
  	    "source": "cloud.cfg",
	    "destination": "/tmp/cloud.cfg"
	},
        {
            "scripts": [
                "scripts/zerodisk.sh",
                "scripts/desktop.sh"
            ],
            "type": "shell"
        },
        {
            "scripts": [
                "scripts/packages.sh"
            ],
            "type": "shell",
            "only": ["xubuntu-qemu"]
        },
        {
            "scripts": [
                "scripts/addVagrantUser.sh",
                "scripts/guestAdditions.sh"
            ],
            "type": "shell",
            "only": ["xubuntu-vbox"]
        },
        {
            "scripts": [
                "scripts/cleanup.sh"
            ],
            "type": "shell"
        }
    ],
    "post-processors": [
       {
  	    "type": "vagrant",
  	    "output" : "target-vbox/xubuntu.box",
            "vagrantfile_template": "Vagrantfile-template",
  	    "except": ["xubuntu-qemu"]
       }
    ],
    "variables": {
        "boot_wait": "10s",
        "cpus": "4",
        "disk_size": "16384",
        "headless": "false",
        "http_directory": "http",
        "http_port_max": "10089",
        "http_port_min": "10082",
        "iso_checksum": "e2ecdace33c939527cbc9e8d23576381c493b071107207d2040af72595f8990b",
        "iso_checksum_type": "sha256",
        "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.4-server-amd64.iso",
        "memory_size": "4096",
        "shutdown_command": "shutdown -P now",
        "ssh_password": "toor",
        "ssh_port": "22",
        "ssh_username": "root",
        "ssh_wait_timeout": "90m",
        "vm_name": "xubuntu",
        "vnc_bind_address": "0.0.0.0"
    }
}
